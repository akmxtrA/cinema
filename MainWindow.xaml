<Window x:Class="cinema.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cinema"
        mc:Ignorable="d"
        Title="Кинотеатр" Height="350" Width="300">
    <Grid>
        <Label Content="Авторизация" HorizontalAlignment="Center" Margin="0,28,0,0" VerticalAlignment="Top" FontSize="30"/>
        <Button x:Name="loginBtn" Content="Войти" HorizontalAlignment="Center" Margin="0,258,0,0" VerticalAlignment="Top" Width="189" Click="loginBtn_Click"/>
        <TextBox x:Name="loginBox" HorizontalAlignment="Left" Height="23" Margin="55,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187"/>
        <TextBox x:Name="passwordBox" HorizontalAlignment="Left" Height="23" Margin="55,188,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187"/>
        <Label Content="Введите логин:" HorizontalAlignment="Left" Margin="55,89,0,0" VerticalAlignment="Top"/>
        <Label Content="Введите пароль:" HorizontalAlignment="Left" Margin="55,162,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
